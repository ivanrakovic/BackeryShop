@model BackeryShop.Web.Models.ViewModels.TurnoverViewModel


@{
    ViewBag.Title = "Dodaj novu listu";
}
<h2>Unos za @Model.Backery.Name</h2>


<div class="row">
    <div class="col-md-3">
        <div class="form-group">
            <div class="col-md-10">
                <div id="turnover-date-input"></div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @for (int j = 1; j <= Model.Backery.NumberOfShifts; j++)
                {
                    <div class="radio">
                        <label><input type="radio" name="shiftgrp" value="@j">Smena @j</label>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="col-md-9">
        <div class="table-responsive">
            <table class="table table-condensed table-striped table-bordered table-hover no-margin">
                <thead>
                    <tr>
                        <th style="width:5%">
                            Id
                        </th>
                        <th style="width:25%">Naziv proizvoda</th>
                        <th style="width:10%" class="hidden-phone">Cena</th>
                        <th style="width:10%" class="hidden-phone">Staro Stanje</th>
                        <th style="width:10%" class="hidden-phone">Novo Stanje</th>
                        <th style="width:10%" class="hidden-phone">Došlo</th>
                        <th style="width:10%" class="hidden-phone">Škart</th>
                        <th style="width:10%" class="hidden-phone">Prodato</th>
                        <th style="width:10%" class="hidden-phone">Ukupno</th>
                    </tr>
                </thead>
                <tbody>
                    @{ var i = 1; }
                    @foreach (var item in Model.TurnoverProductsViewModels)
                    {

                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ProdtId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DisplayName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Price)
                            </td>
                            <td class="hidden-phone">
                                <input class="form-control js-decimal" type="text" id="PreviousBalance_@i" />
                            </td>
                            <td class="hidden-phone">
                                <input class="form-control js-decimal" type="text" id="NewBalance_@i" />
                            </td>
                            <td class="hidden-phone">
                                <input class="form-control js-decimal" type="text" id="BakedNew_@i" />
                            </td>
                            <td>
                                <input class="form-control js-decimal" type="text" id="Scrap_@i" />
                            </td>
                            <td>
                                <input class="form-control js-decimal" type="text" id="Sold_@i" />
                            </td>
                            <td>
                                <input class="form-control js-decimal" type="text" id="Total_@i" />
                            </td>
                        </tr>
                        i = i + 1;
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.8.0/js/bootstrap-datepicker.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.8.0/css/bootstrap-datepicker.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.8.0/locales/bootstrap-datepicker.rs-latin.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.inputmask/3.3.4/jquery.inputmask.bundle.js"></script>
    @*@Scripts.Render("~/bundles/inputmask")*@
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/backery")
}
