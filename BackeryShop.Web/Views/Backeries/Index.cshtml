@model IEnumerable<BackeryShopDomain.Classes.Backery>

@{
    ViewBag.Title = "Index";
}

<h2>Pregled pekara</h2>

<p>
    <a href="@Url.Action("Create", "Backeries")" class="btn btn-success">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Nova pekara
    </a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PriceList.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumberOfShifts)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PriceList.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumberOfShifts)
        </td>
        <td>
            @Html.ActionLink("Izmenite", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Brisanje", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
