@model BackeryShop.Web.Models.ViewModels.PriceListDetailViewModel
@{


    ViewBag.Title = "Detalji cenovnika";
}

<hr />

<h4>Detalji cenovnika @Model.PriceListName</h4>
<p>
    <a class="js-detail btn btn-success" href="#" data-id="@Model.MasterId" data-route="pricelistdetails" data-action="Create">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Dodajte novi proizvod
    </a>
</p>
<table class="table table-responsive table-hover">

    <tr class="warning">
        <th class="col-sm-3 col-md-3">
            @Html.DisplayNameFor(model => model.PriceListDetailItems.FirstOrDefault().Product.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PriceListDetailItems.FirstOrDefault().Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PriceListDetailItems.FirstOrDefault().OrderNo)
        </th>
        <th class="col-sm-6 col-md-6">&nbsp;</th>
    </tr>

    @foreach (var item in Model.PriceListDetailItems)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderNo)
            </td>
            <td>
                <a class="js-detail btn btn-warning" href="#" data-master-id="@item.PriceListId" data-id="@item.Id" data-route="pricelistdetails" data-action="Edit" data-toggle="tooltip" title="Izmenite podatke">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </a> |
                <a class="js-detail btn btn-danger" href="#" data-master-id="@item.PriceListId" data-id="@item.Id" data-route="pricelistdetails" data-action="Delete" data-toggle="tooltip" title="Brisanje prozivoda iz liste">
                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                </a>
            </td>
        </tr>
    }

</table>



<div class="modal fade " role="dialog" id="pricelistdetails">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Cenovnik</h4>
            </div>
            <div class="modal-body">
                <div id="pricelistdetails-container"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Odustani</button>
            </div>
        </div>
    </div>
</div>
