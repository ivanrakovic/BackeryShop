@model BackeryShop.Web.Models.ViewModels.PriceListDetailViewModel
@{


    ViewBag.Title = "Detalji cenovnika";
}

<h2>Detalji cenovnika</h2>

<p>
    <a class="js-detail" href="#" data-id="@Model.MasterId" data-route="pricelistdetails" data-action="Create">Dodajte novi proizvod</a>
 
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PriceListDetailItems.FirstOrDefault().PriceList.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PriceListDetailItems.FirstOrDefault().Product.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PriceListDetailItems.FirstOrDefault().Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PriceListDetailItems.FirstOrDefault().OrderNo)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.PriceListDetailItems)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PriceList.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderNo)
            </td>
            <td>
                <a class="js-detail" href="#" data-master-id="@item.PriceListId" data-id="@item.Id" data-route="pricelistdetails" data-action="Edit">Izmenite</a> |                
                <a class="js-detail" href="#" data-master-id="@item.PriceListId" data-id="@item.Id" data-route="pricelistdetails" data-action="Delete">Brisanje</a>
            </td>
        </tr>
    }

</table>



<div class="modal fade " role="dialog" id="pricelistdetails">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Cenovnik</h4>
            </div>
            <div class="modal-body">
                <div id="pricelistdetails-container"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Odustani</button>
            </div>
        </div>
    </div>
</div>
