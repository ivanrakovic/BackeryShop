@model IEnumerable<BackeryShopDomain.Classes.PriceListDetail>

@{
    ViewBag.Title = "Detalji cenovnika";
}

<h2>Detalji cenovnika</h2>

<p>
    @Html.ActionLink("Dodajte nov proizvod", "Create", "PriceListDetails",  new { id = @Model?.First().PriceListId }, null))
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PriceList.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderNo)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PriceList.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderNo)
            </td>
            <td>
                @Html.ActionLink("Izmenite", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
